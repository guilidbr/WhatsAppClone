<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="android.guilhermedambros.whatsappclone.activity.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/largura_logo"
        android:layout_height="@dimen/altura_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/logo"
        android:textColor="@color/textColorPrimary"/>

    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="Digite seu nome."
        android:inputType="textPersonName"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/textColorPrimary"
        android:paddingLeft="@dimen/padding_padrao"
        android:paddingRight="@dimen/padding_padrao"/>

    <EditText
        android:id="@+id/edit_codigo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="+55"
        android:inputType="number"
        android:layout_below="@+id/edit_nome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/textColorPrimary"/>

    <EditText
        android:id="@+id/edit_ddd"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:ems="10"
        android:hint="11"
        android:inputType="number"
        android:layout_alignBaseline="@+id/edit_codigo"
        android:layout_alignBottom="@+id/edit_codigo"
        android:layout_toRightOf="@+id/edit_codigo"
        android:layout_toEndOf="@+id/edit_codigo"
        android:textColor="@color/textColorPrimary"/>

    <EditText
        android:id="@+id/edit_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_ddd"
        android:layout_alignBottom="@+id/edit_ddd"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/edit_ddd"
        android:layout_toRightOf="@+id/edit_ddd"
        android:ems="10"
        android:hint="99604-8967"
        android:inputType="number"
        android:paddingRight="@dimen/padding_padrao"
        android:textColor="@color/textColorPrimary" />

    <Button
        android:id="@+id/botao_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_ddd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="@dimen/padding_padrao"
        android:paddingRight="@dimen/padding_padrao"
        android:text="@string/botao_cadastrar"
        android:textColor="@color/textColorPrimary" />

</RelativeLayout>
